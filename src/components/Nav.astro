---
import { Image } from "astro:assets";
import logo from "../assets/logo/public/logo.png";
---

<div
  x-data="{ showmenu: false }"
  class="p-4 fixed lg:static w-full"
>

  <div id="navbar" class="flex flex-row justify-between">
    <div id="logo" class="uppercase font-bold">
      <a href="#">
        <Image src={logo} alt="logo" class="p-10 w-28" />
    </a>
    </div>

    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-19 px-10 py-13 font-body">
        <li class="text-grey-100 hover:text-yellow-100 uppercase"><a href="#">Bestil fremkaldelse</a></li>
        <li class="text-grey-100 hover:text-yellow-100 uppercase"><a href="#">KÃ¸b kamera</a></li>
        <li class="text-grey-100 hover:text-yellow-100 uppercase"><a href="#">Services</a></li>
        <li class="text-grey-100 hover:text-yellow-100 uppercase"><a href="#">Analog-guiden</a></li>
        <li class="text-grey-100 hover:text-yellow-100 uppercase"><a href="#">Send til os</a></li>
        <li class="text-grey-100 hover:text-yellow-100 uppercase"><a href="#">Om</a></li>
      </ul>
    </nav>
    <button
      id="burgermenu"
      class="lg:hidden text-grey-100 hover:text-yellow-100" 
      x-on:click="showmenu = ! showmenu">Menu</button
    >
  </div>
  <nav
    id="mobilmenu"
    class="flex flex-col content-center pt-4"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul>
      <li class="pl-10py-2 text-grey-100 hover:text-yellow-100">
        <a href="#">Fremkaldelse</a>
      </li>
      <li class="pl-10 py-2 text-grey-100 hover:text-yellow-100">
        <a href="#">Om</a>
      </li>
    </ul>
  </nav>
</div>
