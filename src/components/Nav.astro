---
import { Image } from "astro:assets";
import logo from "../assets/logo/public/logo.png";
import cart from "../assets/icons/cart.svg";
---

<div x-data="{ showmenu: false }" class="fixed lg:static w-full z-50">
  <div id="navbar" class="flex flex-row justify-between border-b px-10 border-card-stroke bg-grey-400">

    <div id="logo">
      <a href="#">
        <Image src={logo} alt="logo" class="py-10 w-25" />
      </a>
    </div>

    <nav id="desktopmenu" class="hidden lg:block font-['Arial']">
      <ul class="flex flex-row gap-19 px-10 py-15">
        <li class="text-text-primary hover:text-text-tertiary uppercase transition duration-400 ease-in-out">
          <a href="#">Bestil fremkaldelse</a>
        </li>
        <li class="text-text-primary hover:text-text-tertiary uppercase transition duration-400 ease-in-out">
          <a href="#">Køb kamera</a>
        </li>
        <li class="text-text-primary hover:text-text-tertiary uppercase transition duration-400 ease-in-out">
          <a href="#">Services</a>
        </li>
        <li class="text-text-primary hover:text-text-tertiary uppercase transition duration-400 ease-in-out">
          <a href="#">Analog-guiden</a>
        </li>
        <li class="text-text-primary hover:text-text-tertiary uppercase transition duration-400 ease-in-out">
          <a href="#">Send til os</a>
        </li>
        <li class="text-text-primary hover:text-text-tertiary uppercase transition duration-400 ease-in-out">
          <a href="#">Om</a>
        </li>
        <li>
          <button>
            <a href="#">
              <Image src={cart} alt="cart"/>
            </a>  
          </button>
        </li>
      </ul>
    </nav>

<button class="lg:hidden ml-23">
    <a href="#">
      <Image src={cart} alt="cart"/>
    </a>
</button>
      
    <button id="burgermenu" class="lg:hidden text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out focus:outline-none" x-on:click="showmenu = !showmenu">
      <svg 
      x-show="!showmenu" 
      class="w-12 h-12" fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <svg 
      x-show="showmenu" 
      class="w-12 h-12" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24" 
      xmlns="http://www.w3.org/2000/svg">
        <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
    
  </div>

  <nav
    id="mobilmenu"
    class="flex bg-grey-400 flex-col content-center pt-4 lg:hidden"
    x-show="showmenu"
    x-transition
    x-on:click.outside="showmenu = false"
  >
    <ul class="py-14 pl-15">
      <li class="py-5 uppercase text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out">
        <a href="#">Bestil fremkaldelse</a>
      </li>
      <li class="py-5 uppercase text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out">
        <a href="#">Køb kamera</a>
      </li>
      <li class="py-5 uppercase text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out">
        <a href="#">Services</a>
      </li>
      <li class="py-5 uppercase text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out">
        <a href="#">Analog-guiden</a>
      </li>
      <li class="py-5 uppercase text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out">
        <a href="#">Send til os</a>
      </li>
      <li class="py-5 mb-34 uppercase text-text-primary hover:text-text-tertiary transition duration-400 ease-in-out">
        <a href="#">Om</a>
      </li>
    </ul>
  </nav>
</div>
