---
const {title, img, text, textto, texttre, textfire} = Astro.props;
---

<div class="border border-card-stroke mt-10 bg-processbar-secondary">

<div class="relative text-center">
    <h3 class="text-text-tertiary font-['Lora'] italic font-bold pt-10 lg:text-2xl lg:pb-6 relative text-center lg:text-center">{title}</h3>
    <img class="lg:w-[419px] lg:h-[319px]" src={img}>
</div>

<div class="lg:px-10 text-text-primary pt-10 px-10 text-mobilsm lg:text-md lg:font-light font-['Arial']">
<p >{text}</p>
<p class="pt-5 text-text-primary" >{textto}</p>
<p class="py-5">{texttre}</p>
<p class="pb-10 text-text_card-price">{textfire}</p>
</div>
</div>

