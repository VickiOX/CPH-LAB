---
import Button from './Button.astro';
---
<div class="w-full relative">
    <div class="w-full h-[500px] flex items-center justify-center overflow-hidden relative"> <!-- Fixed height and overflow hidden -->
        <video class="absolute top-1/2 left-1/2 w-auto min-w-full min-h-full transform -translate-x-1/2 -translate-y-1/2" autoplay loop muted> <!-- Positioned absolutely and centered -->
            <source src="src/assets/video/hero.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
    <div class="text-center absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10">
        <span class="text-grey-500 font-[Lora] font-bold text-3xl">a c41-studio</span>
        <h1 class="uppercase pt-10 font-[Lora] font-bold text-yellow-200 text-4xl lg:text-6xl pb-12">Professionel <br> film fremkaldelse</h1>
        <Button variant="primary" size="large" class="">Bestil fremkaldelse</Button>
    </div>
</div>
