---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import KurvOversigt from "../components/KurvOversigt.astro";
import Ialt from "../components/Ialt.astro";
---
<MainLayout title="CPH-Lab"> 
	<!-- for hver spacing mellem sektionerne skal der være 112px som kan skrives som py-22, pt-22 eller pb-22 -->
	<article class="mx-14">

	
    <!-- Brødkrummesti mobil -->
    <div class="lg:hidden">
		<div class="list-none flex text-text-primary font-extralight pt-22 gap-4 text-xs mx-11">
			<p>Fremkaldelse</p>
			<p>Størrelse</p>
			<p>Fremkaldelsestype</p>
		</div>
		<div class="list-none flex text-text-primary font-extralight pt-1 gap-4 text-xs mx-11">
			<p>Opløsning</p>
			<p>Kvantitet</p>
			<p class="text-text-secondary">Kurv</p>
		</div>
	</div>
	
	  <!-- Brødkrummesti web -->
	  <div class="hidden lg:block">
		<div class="list-none flex text-text-primary font-extralight pt-3 pb-12 gap-4 text-sm mx-11 font-[body]">
			<p>Fremkaldelse</p>
			<p>Størrelse</p>
			<p>Fremkaldelsestype</p>
			<p>Opløsning</p>
			<p>Kvantitet</p>
			<p class="text-text-secondary">Kurv</p>
		</div>
	</div>

	<h1 class="text-text-primary text-center text-mobil4xl font-[display] pt-12 lg:text-5xl lg:pt-4">Kurv</h1>


	<!-- Card af filmruller -->
	<section class="mx-11">
        <h2 class="text-text-secondary text-center font-[display] text-mobilxl lg:text-4xl">Dine fremkaldelsesvalg</h2>

        <div class="flex justify-center">
         <div class="mx-0 lg:mx-32 lg:pt-10">
		<KurvOversigt img="src/assets/images/mm35.webp" price="40 kr." title="Filmrulle:" text="35 mm"/>
        <KurvOversigt img="src/assets/images/digitale-foto.webp" price="79 kr." title="Fremkaldelsestype:" text="Digital fremkaldelse"/>
        <KurvOversigt img="src/assets/images/xx-large.webp" price="99 kr." title="Opløsning:" text="XX-Large"/>
        <KurvOversigt img="src/assets/images/enkelt.webp" title="Antal:" text="3 stk."/>
        <Ialt></Ialt>
        </div>
    </div>
         

</div>
</section>



<!-- Web -->
<div class="hidden lg:block">
<div class="grid grid-cols-2 pt-6">
    <!-- Tilbage knap -->
    <div class="flex justify-start mx-22">
    <Button variant="secondary" size="medium">Fortsæt</Button>
    </div>

    <!-- Fortsæt knap -->
    <div class="flex justify-end mx-22">
    <Button variant="primary" size="medium">Fortsæt</Button>
    </div>
</div>
</div>

<!-- Mobil -->
<div class="lg:hidden">
    <div class="grid grid-cols-2 pt-19 gap-6 mx-10">
        
     
            <!-- Tilbage knap -->
            <Button variant="secondary" size="small">Fortsæt</Button>
  
            <!-- Fortsæt knap -->
            <Button variant="primary" size="small">Fortsæt</Button>

        </div>
    </div>
</div>
	

</article>
</MainLayout>
