---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import BestilCard from '../components/BestilCard.astro'
---
<MainLayout title="CPH-Lab"> 
	<!-- for hver spacing mellem sektionerne skal der være 112px som kan skrives som py-22, pt-22 eller pb-22 -->
	<article class="mx-19">

	<!-- Brødkrummesti -->
	<div class="list-none flex text-text-primary font-extralight pt-22 gap-4 text-xs -mx-14">
		<p>Fremkaldelse</p>
		<p class="text-text-secondary">Størrelse</p>
		<p>Fremkaldelsestype</p>
	</div>
	<div class="list-none flex text-text-primary font-extralight pt-1 gap-4 text-xs -mx-14">
		<p>Opløsning</p>
		<p>Kvantitet</p>
		<p>Kurv</p>
	</div>

	<h1 class="text-text-primary text-center text-mobil4xl font-[display] pt-12 lg:text-5xl">Størrelse</h1>
	<h2 class="text-text-secondary text-center font-[display]">Vælg din filmrulle</h2>

	<h3 class="text-text-primary text-center font-[display]">Standard størrelser</h3>
	<!-- Card af filmruller -->
	<div class="flex justify-center">
	<div class="grid grid-cols-2 gap-15 lg:gap-20 px-12 py-5 mx-0 ">
	<BestilCard img="src/assets/images/mm35.webp" alt="35mm filmrulle" title="35mm" price="40 kr."/>
	<BestilCard img="src/assets/images/mm120.webp" alt="120mm filmrulle" title="120mm" price="120 kr."/>
</div>
</div>

	<h3 class="text-text-primary pt-15 text-center font-[display]">Special størrelser</h3>
	<!-- Card af filmruller -->
	<div class="flex justify-center">
		<div class="grid grid-cols-2 gap-15 lg:gap-20 px-12 py-5 mx-0 lg:grid-cols-4 ">
		<BestilCard img="src/assets/images/mm127.webp" alt="35mm filmrulle" title="35mm" price="40 kr."/>
		<BestilCard img="src/assets/images/mm110.webp" alt="120mm filmrulle" title="120mm" price="120 kr."/>
		<BestilCard img="src/assets/images/mm126.webp" alt="35mm filmrulle" title="35mm" price="40 kr."/>
		<BestilCard img="src/assets/images/storformat.webp" alt="120mm filmrulle" title="120mm" price="120 kr."/>
	</div>
	</div>

	<!-- Fortsæt knap -->

</article>
</MainLayout>