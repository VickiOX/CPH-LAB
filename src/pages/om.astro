import filmrulle1 from "../assets/images/filmrulle-1.webp";
import filmrulleom from "../assets/images/filmrulle-om.webp";
import Nicephore from "../assets/images/Nicephore.webp";
import Eastman from "../assets/images/Eastman.webp";
import ensomComputer2 from "../assets/images/ensom-computer2.webp";
import Virksomhed from "../components/Virksomhed.astro";
import Retro from "../components/Retro.astro";
