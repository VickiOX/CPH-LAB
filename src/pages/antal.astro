---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import BestilCard from "../components/BestilCard.astro";
---
<MainLayout title="CPH-Lab"> 
	<!-- for hver spacing mellem sektionerne skal der være 112px som kan skrives som py-22, pt-22 eller pb-22 -->
	<article class="">

	
    <!-- Brødkrummesti mobil -->
    <div class="lg:hidden">
		<div class="list-none flex text-text-primary font-extralight pt-22 gap-4 text-xs mx-11 font-['Arial']">
			<p>Fremkaldelse</p>
			<p>Størrelse</p>
			<p>Fremkaldelsestype</p>
		</div>
		<div class="list-none flex text-text-primary font-extralight pt-1 gap-4 text-xs mx-11">
			<p>Opløsning</p>
			<p class="text-text-secondary">Kvantitet</p>
			<p>Kurv</p>
		</div>
	</div>
	
	  <!-- Brødkrummesti web -->
	  <div class="hidden lg:block">
		<div class="list-none flex text-text-primary font-extralight pt-3 pb-12 gap-14 text-sm mx-11 font-['Arial']">
			<p>Fremkaldelse</p>
			<p>Størrelse</p>
			<p>Fremkaldelsestype</p>
			<p>Opløsning</p>
			<p class="text-text-secondary">Kvantitet</p>
			<p>Kurv</p>
		</div>
	</div>

	<h1 class="text-text-primary text-center text-[32px] font-['Lora'] font-bold pt-12 lg:text-5xl">Kvantitet</h1>


	<!-- Card af filmruller -->
	<section class="mx-11">
        <h2 class="text-text-secondary text-center font-['Lora'] text-xl lg:text-4xl">Vælg antal filmruller</h2>

    <div class="flex justify-center">
		<div class="grid grid-cols-3 gap-9 lg:gap-20 lg:pt-14">
         
		<BestilCard img="src/assets/images/enkelt.webp" alt="large" title="1 stk."/>
         
		<BestilCard img="src/assets/images/tre-ruller.webp" alt="x-large" title="3 stk."/>
          
		<BestilCard img="src/assets/images/mange-ruller.webp" alt="xx-large" title="10 stk."/>
	    </div>
	</div>

    <div class="flex justify-center">
    <div class="bg-card-primary border border-card-stroke px-6 py-4 grid grid-cols-3 mt-10 gap-5 lg:mt-18">
        <label class="text-text-primary py-4 col-start-1 font-['Arial']">Andet antal</label>
        <input class="w-[100px] h-[40px] col-start-3 lg:w-[185px] focus:bg-card-secondary focus:border-2 focus:border-text-primary focus:ring-card-primary" type="number" id="quantity" name="quantity" min="1" max="100">
    </div>
</div>
</section>



<!-- Web -->
<div class="hidden lg:block">
<div class="grid grid-cols-2 pt-6">
    <!-- Tilbage knap -->
    <div class="flex justify-start mx-22">
    <Button variant="secondary" size="medium">Tilbage</Button>
    </div>

    <!-- Fortsæt knap -->
    <div class="flex justify-end mx-22">
    <Button variant="primary" size="medium">Fortsæt</Button>
    </div>
</div>
</div>

<!-- Mobil -->
<div class="lg:hidden">
    <div class="grid grid-cols-2 pt-19 gap-6 mx-10">
        
     
            <!-- Tilbage knap -->
            <Button variant="secondary" size="small">Tilbage</Button>
  
            <!-- Fortsæt knap -->
            <Button variant="primary" size="small">Fortsæt</Button>

        </div>
    </div>
</div>
	

</article>
</MainLayout>
